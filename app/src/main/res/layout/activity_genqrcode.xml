<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView android:id="@+id/tvAmount" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/str_tv_amount_desc"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText android:id="@+id/edtAmount" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:ems="10"
        android:inputType="numberDecimal">

        <requestFocus />
    </EditText>
    <Button android:id="@+id/btnGenerate" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/str_btn_generate" />
    <ImageView android:id="@+id/imgQrCode" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>